generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum GenderType{
    male
    femal
}


model Patient{
  id                String             @id @default(cuid())
  name              String
  email             String             @unique
  phone             String?
  profile_picture   String?
  date_of_birth     DateTime?
  gender            GenderType?
  medical_recods    String?
  address           String?
  createdAt         DateTime           @default(now())
  updatedAt         DateTime           @updatedAt

}