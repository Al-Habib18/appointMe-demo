generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum PaymentStatus {
  SUCCEED
  FAILED
}
  
model Payment {
  id              String    @id @default(cuid()) 
  appointment_id  String   
  amount          Float     
  transaction_id  String    @default(cuid()) 
  status      PaymentStatus @default(SUCCEED)
  created_at      DateTime  @default(now())
}

